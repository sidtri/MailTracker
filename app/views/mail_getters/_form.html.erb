<%= simple_form_for(@mail_getter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :method %>
    <%= f.input :address %>
    <%= f.input :port %>
    <%= f.input :user_name %>
    <%= f.input :password %>
    <%= f.input :enable_ssl %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
